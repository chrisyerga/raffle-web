<script>
  const entries = <%- JSON.stringify(names) %>
  var entryIndex = 0;
  var loops = 0;
  const status = document.getElementById("drawing-status");

  function updateStatus() {
    entryIndex = (entryIndex + 1) % entries.length;
    status.innerText = entries[entryIndex];

    var interval = 25;
    loops++;
    if (loops < 15) {
      interval = 25;
    } else if (loops < 35) {
      interval = 50;
    } else if (loops < 60) {
      interval = 100;
    } else if (loops < 64) {
      interval = 300;
    } else if (loops < 66) {
      interval = 600;
    } else if (loops < 67) {
      interval = 800;
    } else if (loops < 68) {
      interval = 1000;
    } else if (loops < 70) {
      interval = 1200;
    } else {
      interval = 0;
    }
    if (interval)
      setTimeout(updateStatus, interval);
  }

  setTimeout(updateStatus, 250);
  status.innerText = "poop";
</script>

