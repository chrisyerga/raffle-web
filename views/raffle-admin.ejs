  <meta name="description" content="Luxury drug and alcohol rehab treatment in Reno NV providing comfort, care 
and a commitment to long-term sobriety and confidentiality." />
  <link rel="stylesheet" type="text/css" href="../css/site-styles.css" />
  <link rel="stylesheet" href="https://use.typekit.net/uqo4llz.css" />
  <link rel="shortcut icon" type="image/x-icon" href="../images/diffs-favicon-blue.png" />

  <style>
    /* body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
      } */

    h1 {
      text-align: center;
      font-size: 2.2rem;
    }

    .container {
      max-width: 400px;
      margin: 0 auto;
      align-self: center;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
    }

    .form-group input {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    button {
      background-color: #555;
      color: white;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 4px;
      border: none;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .container {
      padding-top: 40px;
    }

    .container p {
      padding: 10px;
    }

    .drawing-container {
      margin: 0 auto;
      max-width: 512px;
    }

    .drawing-container p {
      text-align: center;
      padding-bottom: 25px;
    }

    .countdown-container {
      max-width: 300px;
      border-radius: 10px;
      background-color: #555;
      margin: 0 auto;
      padding: 20px;
    }

    .countdown-container p {
      background-color: #555;
      color: #ff5;
      text-align: center;
    }



    .user-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 10px;
      max-width: 70%;
      margin: 0 auto;
    }

    @media (max-width: 600px) {
      .user-list {
        grid-template-columns: 1fr;
      }
    }

    .user-list a {
      text-decoration: none;
      color: #111;
    }

    .user-card {
      display: flex;
      align-items: center;
      background-color: #f2f2f2;
      padding: 10px;
      border-radius: 4px;
      cursor: pointer;
    }

    .user-card:hover {
      background-color: #aaa;
      cursor: pointer;
    }

    .user-card h3 {
      margin: 0;
    }

    .user-details {
      flex-grow: 1;
    }

    .user-details h3,
    .user-details p {
      margin: 0;
    }

    .user-card p {
      margin: 0;
    }

    .index-number {
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      background-color: #f49d79;
      color: #111;
      border-radius: 50%;
      margin-right: 10px;
    }

    .table-header {
      margin: 20px;
      max-width: 65%;
      margin: 0 auto;
    }

    .table-controls {}

    .table-controls {}

    div.scroll-container {
      background-color: #666;
      width: 600px;
      height: 150px;
      overflow-x: hidden;
      overflow-y: auto;
      text-align: center;
      padding: 20px;
      margin: 0 auto;
    }

    .header {
      background-color: #f5f5f5;
      padding: 10px;
      text-align: right;
    }

    .user-profile {
      display: flex;
      align-items: center;
      max-width: 50%;
      padding: auto;
      float: right;
    }

    .user-profile img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }

    .user-profile .username {
      font-weight: 300;
    }

    .logout-button {
      padding: 5px 10px;
      margin: 10px;
      background-color: #333;
      color: #fff;
      font-weight: bold;
      border: none;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <%- include('header', {user: 'Chris Yerga'}) %>
  <div class="user-profile">
    <img src="<%=authedUser.photo%>" alt="User Photo">
    <span class="username"><%=authedUser.name%></span>
    <button class="logout-button">Logout</button>
  </div>

  <div class="bg-mint" id="wrapper">
    <div class="container bg-mint">
      <h1 style="padding-bottom: 8px">Raffle Admin Console</h1>
    </div>

    <div class="table-header">

      <div style="max-width: 60%; margin: auto;" class="table-controls">
        <!--                <p style="text-align: center"><%= entries.length %> entries as of <%= new Date().toLocaleTimeString() %></p>
    <div class="form-group" style="display: inline-block">
          <label for="search" style="display: inline-block">Search</label>
          <input type="text" style="display: inline-block" />
          
        </div>
        -->

        <div class="form-group" style="display: inline-block; padding: 12px">
          <button id="export-button" onclick="submitClicked()">
            Export Data (Entries:<%= entries.length %>)
          </button>
        </div>
        <div class="form-group" style="display: inline-block; padding: 12px">
          <button id="export-button" onclick="submitClicked()">
            <a href="./admin/drawing" style="text-decoration: none; color: #fff">
              Start New Raffle Drawing</a>
          </button>
        </div>
        <div class="form-group" style="display: inline-block; padding: 12px">
          <button id="export-button" onclick="submitClicked()">
            <a href="./drawing" style="text-decoration: none; color: #fff">
              Show Previous Drawings</a>
          </button>
        </div>

      </div>

    </div>

    <div class="user-list">
      <% entries.forEach(function(user, index){ %>
      <a href="details/<%=user.id%>">
        <div class=" user-card" db-index="<%=index%>">
          <div class="index-number"><%= index+1 %></div>
          <div class="user-details">
            <h3><%= user.name %></h3>
            <p><%= user.email %></p>
            <% if (user.entryCount) {%>
            <p><b><%=user.entryCount%></b> Raffle Entries</p>
            <% }%>
          </div>
        </div>
      </a>
      <% }); %>
    </div>
    <div style="padding-bottom: 500px"></div>
  </div>
</body>

</html>